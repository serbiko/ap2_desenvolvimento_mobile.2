<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#333333"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Cabeçalho fixo -->
    <TextView
        android:id="@+id/tvTitle"
        android:text="GOT Quiz"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Conteúdo centralizado verticalmente -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:text="3. Qual palavra mais te define dentre as abaixo:"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/optionLegacy"
            android:text="legado"
            android:background="#222222"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/optionHonor"
            android:text="honra"
            android:background="#222222"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/optionDetermination"
            android:text="determinação"
            android:background="#222222"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/optionPower"
            android:text="poder"
            android:background="#222222"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/optionAmbition"
            android:text="ambição"
            android:background="#222222"
            android:backgroundTint="#222222"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
